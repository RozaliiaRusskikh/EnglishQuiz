<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/toolbar" />

    <ImageView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/ic_computer_and_books"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_centerVertical="true"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="60dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true">

        <Button
            android:id="@+id/learn_btn"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:text="@string/learn_btn"
            android:layout_marginBottom="5dp"
            android:textStyle="bold"
            android:background="@drawable/round_buttton"
            android:padding="5dp"/>

        <Button
            android:id="@+id/train_btn"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:text="@string/train_btn"
            android:layout_marginBottom="5dp"
            android:textStyle="bold"
            android:background="@drawable/round_buttton"
            android:padding="5dp"/>

        <Button
            android:id="@+id/about_btn"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:text="@string/about_btn"
            android:textSize="12dp"
            android:padding="5dp"/>
    </LinearLayout>

</RelativeLayout>