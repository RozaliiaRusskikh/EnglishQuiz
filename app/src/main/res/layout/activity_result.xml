<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.e.englishquiz.Activities.CheatActivity"
    android:background="@color/white">

    <include
        layout="@layout/toolbar" />

    <ImageView
        android:id="@+id/img_firework"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/img_firework"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="10dp"
        android:contentDescription="@string/firework"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="@string/amount_of_correct_answers"
        android:textColor="@color/colorPrimary"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/img_firework"/>

    <TextView
        android:id="@+id/percent_of_correct_answers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:padding="3dp"
        tools:text="Percent"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/amount"
        android:textColor="@color/colorPrimary"
        android:textSize="40sp"/>

    <ImageButton
        android:id="@+id/gift_button"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="55dp"
        android:background="@color/colorAccent"
        android:padding="10dp"
        android:src="@drawable/img_gift" />
</RelativeLayout>